<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.ntierbiz.core.user.model.BasicCredentialsPO" table="BASIC_CRENDENTIALS" >
		<id name="id" type="long" >
		  	<column name="ID" />
			<generator class="foreign" >  
			 	<param name="property">basicProfile</param>
			 </generator>		
		</id>		
		<one-to-one name="basicProfile" class="org.ntierbiz.core.user.model.BasicProfilePO" constrained="true"></one-to-one>			
		<property name="login" column="LOGIN" type="java.lang.String"/>
		<property name="password" column="PASSWORD" type="java.lang.String"/>
		<property name="passwordReminder" column="PASSWORD_REMINDER" type="java.lang.String"/>
		<property name="reminderEmail" column="REMINDER_EMAIL" type="java.lang.String"/>
		<property name="ipRange" column="IP_RANGE" type="java.lang.String"/>
		<property name="securityQuestion" column="SECURITY_QUESTION" type="java.lang.String"/>
		<property name="newPasswordExpiry" column="NEW_PASSWORD_EXPIRY" type="java.sql.Date"/>
		<property name="disabledFlag" column="DISABLED_FLAG" type="int"/>				
		<property name="DomainId" column="DOMAIN_ID" type="long"/>
		<property name="createdBy" column="CREATED_BY" type="java.lang.String"/>
		<property name="modifiedBy" column="MODIFIED_BY" type="java.lang.String"/>
		<property name="lastModified" column="LAST_MODIFIED" type="java.sql.Date"/>
		
		
	</class>
</hibernate-mapping>