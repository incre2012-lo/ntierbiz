<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.ntierbiz.unit.category.model.CategoryTypePO" table="CATEGORY_TYPE" >
		<id name="id" type="java.lang.String" column="CATEGORYTYPEID" >		
			<generator class="uuid" />
		</id>	
		<property name="typeID" column="TYPE_ID" type="java.lang.String"/>
		<property name="typeCode" column="TYPE_CODE" type="java.lang.Integer"/>
		<property name="description" column="DESC" type="java.lang.String"/>
		<property name="partyID" column="PARTY_ID" type="java.lang.String"/>		
		<property name="createdBy" column="CREATED_BY" type="java.lang.String"/>
		<property name="modifiedBy" column="MODIFIED_BY" type="java.lang.String"/>
		<property name="lastModified" column="LAST_MODIFIED" type="java.sql.Date"/>
		
		<set name="productCategories" inverse="true">
			<key column="PRODUCTCATEGORYID"/>
			<one-to-many class="org.ntierbiz.unit.category.model.ProductCategoryPO"/>
		</set>
	</class>
</hibernate-mapping>