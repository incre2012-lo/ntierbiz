<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.estratg.core.user.model.BasicProfilePO" table="BASIC_PROFILE" >
		<id name="id" type="long" >
		 <column name="ID" />
			<generator class="identity" />
		</id>				
		<property name="firstName" column="FIRST_NAME" type="java.lang.String"/>
		<property name="lastName" column="LAST_NAME" type="java.lang.String"/>
		<property name="companyName" column="COMPANY_NAME" type="java.lang.String"/>
		<property name="discription" column="DISCRIPTION" type="java.lang.String"/>
		<property name="keywords" column="KEYWORDS" type="java.lang.String"/>
		<property name="businessPartnerNumber" column="BUSINESS_PARTNER_NUMBER" type="java.lang.String"/>
		<property name="confirmation" column="CONFIRMATION" type="int"/>
		<property name="typeCode" column="TYPE_CODE" type="int"/>				
		<property name="DomainId" column="DOMAIN_ID" type="long"/>
		<property name="createdBy" column="CREATED_BY" type="java.lang.String"/>
		<property name="modifiedBy" column="MODIFIED_BY" type="java.lang.String"/>
		<property name="lastModified" column="LAST_MODIFIED" type="java.sql.Date"/>
		<one-to-one name="basicCredentials" class="com.estratg.core.user.model.BasicCredentialsPO" cascade="save-update"></one-to-one>
		<set name="basicAddresses" inverse="true" table="BASIC_ADDRESS" >
			<key column="PROFILE_ID" not-null="true"/>
			<one-to-many class="com.estratg.core.user.model.BasicAddressPO"/>
		</set>
	</class>
</hibernate-mapping>